<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antoan.planit.view.eventDetails.EventDetailsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="30dp"
            android:text="Academy Telerik"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/orange"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_date"
            android:src="@drawable/event"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:text="Date: 2016/1/1"
            android:textColor="@color/orange"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_time"
                android:src="@drawable/coolclock"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:id="@+id/tv_start_time"
                android:text="Time: 11:10"
                android:textColor="@color/orange"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:text=" - " />

            <TextView
                android:id="@+id/tv_end_time"
                android:textSize="20dp"
                android:text="11:10"
                android:textColor="@color/orange"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_creator"
            android:src="@drawable/usericon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_creator"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_description"
                android:src="@drawable/description"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_description"
                android:text="Lecture of asp.net mvc"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/orange"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Alarm" />

        <Button
            android:id="@+id/btn_join_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Join event" />

        <TextView
            android:text="Participants:"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/lv_participants"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>

</FrameLayout>
